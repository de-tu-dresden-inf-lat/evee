<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>de.tu-dresden.inf.lat.evee</groupId>
        <artifactId>evee-protege</artifactId>
        <version>${revision}</version>
    </parent>

    <artifactId>evee-protege-lethe-proof-extractor</artifactId>
    <packaging>bundle</packaging>

    <properties>
        <bundleName>${project.artifactId}</bundleName>
    </properties>

    <dependencies>
        <dependency>
            <groupId>de.tu-dresden.inf.lat.evee</groupId>
            <artifactId>evee-protege-core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>de.tu-dresden.inf.lat.evee</groupId>
            <artifactId>evee-lethe-proof-extractor-owlapi4</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>plugin.xml</include>
                </includes>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.10.1</version>
                <configuration>
                    <source>11</source>
                    <target>11</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>5.1.9</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId};singleton:=true</Bundle-SymbolicName>
                        <Import-Package>
                            org.protege.editor.owl.*;version="4.3",
                            sun.misc.*;resolution:=optional,
                            de.tu_dresden.inf.lat.evee.proofs.*,
                            de.tu_dresden.inf.lat.evee.protege.abstractProofService.*,
                            de.tu_dresden.inf.lat.dltools.*,
                            scala.swing.*;resolution:=optional,
                            org.checkerframework.checker.nullness.qual.*;resolution:=optional,
                            org.slf4j.*,
                            *
                        </Import-Package>
                        <Private-Package>
                            de.tu_dresden.inf.lat.evee.proofs.lethe.*,
                            uk.ac.man.cs.lethe.internal.dl.*;-split-package:=merge-last,
                            uk.ac.man.cs.lethe.internal.application.benchmarks.*,
                            uk.ac.man.cs.lethe.internal.forgetting.*,
                            uk.ac.man.cs.lethe.internal.tools.*;-split-package:=merge-last,
                            uk.ac.man.cs.lethe.interpolation.*,
                            com.google.common.collect.*;-split-package:=merge-last,
                            com.google.common.base.*;-split-package:=merge-last,
                            com.google.common.math.*;-split-package:=merge-last,
                            com.google.common.primitives.*;-split-package:=merge-last,
                        </Private-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
